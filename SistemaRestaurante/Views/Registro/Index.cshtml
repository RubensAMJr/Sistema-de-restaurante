@using SistemaRestaurante.Models;
@{Usuario userLogado = (Usuario)Session["Admin"];}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Ambiente - Restaurante</title>

    <!-- Bootstrap core CSS-->
    <link href="~/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template-->
    <link href="~/Content/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <!-- Page level plugin CSS-->
    <link href="~/Content/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">

    <link href="~/Content/CSS/hover.css" rel="stylesheet" />

    <!-- Custom styles for this template-->
    <link href="~/Content/CSS/sb-admin.css" rel="stylesheet">

    <link href="~/Content/CSS/snack.css" rel="stylesheet" />

</head>

<body id="page-top">

    <nav class="navbar navbar-expand navbar-dark bg-dark static-top">

        <a class="navbar-brand mr-1" href="#">Restaurante</a>

        <button class="btn btn-link btn-sm text-white order-1 order-sm-0" id="sidebarToggle" href="#">
            <i class="fas fa-bars"></i>
        </button>

        <!-- Navbar Search -->
        <form class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0">
            <ul class="navbar-nav ml-auto ml-md-0">
                <li class="nav-item dropdown no-arrow">
                    <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span>@userLogado.Nome/@userLogado.Cargo</span><i class="fas fa-user-circle fa-fw"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">

                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">Logout</a>
                    </div>
                </li>
            </ul>
        </form>

        <!-- Navbar -->


    </nav>

    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="sidebar navbar-nav">
            @if (userLogado.Cargo.Equals("GARCOM") || userLogado.Cargo.Equals("GERENTE"))
            {
                <li class="nav-item">
                    <a class="nav-link hvr-icon-back" href="@Url.RouteUrl("ViewMesa")">

                        <i class="fas fa-utensils hvr-icon"></i>

                        <span>Mesas</span>
                    </a>
                </li>
            }
            @if (userLogado.Cargo.Equals("COZINHEIRO") || userLogado.Cargo.Equals("GERENTE"))
            {
                <li class="nav-item">
                    <a class="nav-link hvr-icon-back" href="@Url.RouteUrl("ViewCozinha")">
                        <i class="fas fa-cookie hvr-icon"></i>
                        <span>Cozinha</span>
                    </a>
                </li>
            }
            @if (userLogado.Cargo.Equals("CAIXA") || userLogado.Cargo.Equals("GERENTE"))
            {
                <li class="nav-item">
                    <a class="nav-link hvr-icon-back" href="@Url.RouteUrl("ViewCaixa")">
                        <i class="fas fa-dollar-sign hvr-icon"></i>
                        <span>Caixa</span>
                    </a>
                </li>
            }
            @if (userLogado.Cargo.Equals("COZINHEIRO") || userLogado.Cargo.Equals("GERENTE"))
            {
                <li class="nav-item">
                    <a class="nav-link hvr-icon-back" href="@Url.RouteUrl("ViewProdutos")">
                        <i class="fas fa-fw fa-table hvr-icon"></i>
                        <span>Lista de Produtos</span>
                    </a>
                </li>
            }
            @if (userLogado.Cargo.Equals("GERENTE"))
            {
                <li class="nav-item active">
                    <a class="nav-link hvr-icon-back" href="@Url.RouteUrl("ViewRegistros")">
                        <i class="fas fa-archive hvr-icon"></i>
                        <span>Registros</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link hvr-icon-back" href="@Url.RouteUrl("ViewRelatorio")">
                        <i class="fas fa-chart-pie hvr-icon"></i>
                        <span>Relatórios</span>
                    </a>
                </li>
            }
        </ul>

        <div id="content-wrapper">

            <div class="container-fluid">

                <!--Cards-->
                <div class="row">
                    <div class="col-xl-3 col-sm-6 mb-3">
                        <div class="card text-white bg-success o-hidden h-100">
                            <div class="card-body">
                                <div class="card-body-icon">
                                    <i class="fas fa-utensils"></i>
                                </div>
                                <div class="mr-5">Mesas</div>
                            </div>
                            <a class="card-footer text-white clearfix small z-1 hvr-underline-from-left" data-toggle="modal" data-target="#ModalMesas" href="#">
                                <span class="float-left">Gerenciar</span>
                                <span class="float-right">
                                    <i class="fas fa-angle-right"></i>
                                </span>
                            </a>
                        </div>
                    </div>
                    <div class="col-xl-3 col-sm-6 mb-3">
                        <div class="card text-white bg-info o-hidden h-100">
                            <div class="card-body">
                                <div class="card-body-icon">
                                    <i class="far fa-user"></i>
                                </div>
                                <div class="mr-5">Usuários</div>
                            </div>
                            <a class="card-footer text-white clearfix small z-1 hvr-underline-from-left" data-toggle="modal" data-target="#ModalUser" href="#">
                                <span class="float-left">Gerenciar</span>
                                <span class="float-right">
                                    <i class="fas fa-angle-right"></i>
                                </span>
                            </a>
                        </div>
                    </div>
                    <div class="col-xl-3 col-sm-6 mb-3">
                        <div class="card text-white bg-warning o-hidden h-100">
                            <div class="card-body">
                                <div class="card-body-icon">
                                    <i class="fas fa-list-ol"></i>
                                </div>
                                <div class="mr-5">Comandas</div>
                            </div>
                            <a class="card-footer text-white clearfix small z-1 hvr-underline-from-left" data-toggle="modal" data-target="#ModalComanda" href="#">
                                <span class="float-left">Gerenciar</span>
                                <span class="float-right">
                                    <i class="fas fa-angle-right"></i>
                                </span>
                            </a>
                        </div>
                    </div>
                    <div class="col-xl-3 col-sm-6 mb-3">
                        <div class="card text-white bg-danger o-hidden h-100">
                            <div class="card-body">
                                <div class="card-body-icon">
                                    <i class="fas fa-id-card"></i>
                                </div>
                                <div class="mr-5">Cartões</div>
                            </div>
                            <a class="card-footer text-white clearfix small z-1 hvr-underline-from-left" data-toggle="modal" data-target="#ModalCartoes" href="#">
                                <span class="float-left">Gerenciar</span>
                                <span class="float-right">
                                    <i class="fas fa-angle-right"></i>
                                </span>
                            </a>
                        </div>
                    </div>
                </div>
                <!-- Modals-->
                <div id="ModalMesas" class="modal fade" role="dialog">
                    <div class="modal-dialog">
                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">Gerenciar Mesas</h4>
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>
                            <form action="AdicionaMesa">
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label for="numeroMesa">Numero da Mesa:</label>
                                        <input type="number" step="1" name="numeroMesa" id="numeroMesa" class="form-control" autofocus="autofocus" min="1" placeholder="0" required="required" />
                                    </div>
                                    <div class="form-group">
                                        <button class="btn btn-sm btn-success btnAdicionar" onclick="adicionaMesa()">Adicionar</button>
                                        <p id="mensagem-erro"></p>
                                    </div>
                                    <h3>Lista de mesas</h3>
                                    <div class="form-group table-responsive">
                                        <table class="table table-hover table-responsive table-bordered" style="overflow-y:auto; height:200px;">
                                            <thead style="width:100%">
                                                <tr>
                                                    <th style="width:10%">Id</th>
                                                    <th style="width:90%">Numero</th>
                                                </tr>
                                            </thead>
                                            <tbody class="tabela-Mesa">
                                                @foreach (var mesa in ViewBag.Mesas)
                                                {
                                                    <tr id="@mesa.Numero">
                                                        <td>@mesa.MesaId</td>
                                                        <td>@mesa.Numero</td>
                                                        <td><button class="btn btn-sm btn-danger btnRemover" onclick="removeMesa(@mesa.Numero)">Remover</button></td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                <div id="snackbar"></div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div id="ModalUser" class="modal fade" role="dialog">
                    <div class="modal-dialog">
                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">Gerenciar Usuarios</h4>
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>
                            <form action="@Url.RouteUrl("TelaRegistro")">
                                <div class="modal-body">
                                    <div class="form-group">
                                        <button class="btn btn-sm btn-success btnUsuario">Registrar novo Usuário</button>
                                    </div>
                                    <div class="form-group table-responsive">
                                        <h3>Lista De Usuarios</h3>
                                        <table class="table table-hover table-responsive table-bordered" style="overflow-y:auto; height:200px;">
                                            <thead style="width:100%">
                                                <tr>
                                                    <th style="width:25%">Nome</th>
                                                    <th style="width:25%">Login</th>
                                                    <th style="width:25%">Senha</th>
                                                    <th style="width:25%">Cargo</th>
                                                    <th style="width:25%">Remover</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var user in ViewBag.Usuarios)
                                                {
                                                    <tr id="@user.Nome">
                                                        <td>@user.Nome</td>
                                                        <td>@user.Login</td>
                                                        <td>@user.Senha</td>
                                                        <td>@user.Cargo</td>
                                                        @if (!user.Cargo.Equals("GERENTE"))
                                                        {
                                                            <td><button class="btn btn-sm btn-danger btnRemover" onclick="removeUsuario('@user.Nome')">Remover</button></td>
                                                        }
                                                    </tr>
                                                }
                                            </tbody>

                                        </table>
                                    </div>
                                        <div class="snackbar2" id="snackbar"></div>

                                </div>
                            </form>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                            </div>

                        </div>
                    </div>
                </div>
                <div id="ModalComanda" class="modal fade" role="dialog">
                    <div class="modal-dialog">
                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">Gerenciar Comandas</h4>
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>
                            <form action="AdicionaMesa">
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label for="numeroComanda">Numero da Comanda:</label>
                                        <input type="number" step="1" name="numeroComanda" id="numeroComanda" class="form-control" autofocus="autofocus" min="1" placeholder="0" required="required" />
                                    </div>
                                    <div class="form-group">
                                        <button class="btn btn-sm btn-success btnAdicionar" onclick="adicionaComanda()">Adicionar</button>
                                        <p id="mensagem-erro-comanda"></p>
                                    </div>
                                    <h3>Lista de comandas</h3>
                                    <div class="form-group table-responsive">
                                        <table class="table table-hover table-responsive table-bordered" style="overflow-y:auto; height:200px;">
                                            <thead style="width:100%">
                                                <tr>
                                                    <th style="width:10%">Id</th>
                                                    <th style="width:90%">Numero da Comanda</th>
                                                    <th style="width:90%">Remover</th>
                                                </tr>
                                            </thead>
                                            <tbody class="tabela-Comanda">
                                                @foreach (var comanda in ViewBag.Comandas)
                                                {
                                                    <tr id="@comanda.Id">
                                                        <td>@comanda.Id</td>
                                                        <td>@comanda.Numero</td>
                                                        <td><button class="btn btn-sm btn-danger btnRemover" onclick="removeComanda(@comanda.Numero)">Remover</button></td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                        <div class="snackbar3" id="snackbar"></div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div id="ModalCartoes" class="modal fade" role="dialog">
                    <div class="modal-dialog">
                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">Gerenciar Cartões</h4>
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>
                            <form action="AdicionaCartao">
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label for="nomeCliente">Nome do cliente:</label>
                                        <input type="text" name="nomeCliente" id="nomeCliente" class="form-control" autofocus="autofocus" placeholder="Nome" required="required" />
                                        <label for="numeroCartao">Numero do Cartão:</label>
                                        <input type="number" name="numeroCartao" id="numeroCartao" class="form-control" autofocus="autofocus" min="1" maxlength="6" placeholder="000000" required="required" />
                                    </div>
                                    <div class="form-group">
                                        <button class="btn btn-sm btn-success btnAdicionar" onclick="adicionaCartao()">Adicionar novo Cartão</button>
                                        <p id="mensagem-erro-cartao"></p>
                                    </div>
                                    <h3>Lista de cartões</h3>
                                    <div class="form-group table-responsive">
                                        <table class="table table-hover table-responsive table-bordered" style="overflow-y:auto; height:200px;">
                                            <thead style="width:100%">
                                                <tr>
                                                    <th style="width:10%">Id</th>
                                                    <th style="width:90%">Nome do cliente</th>
                                                    <th style="width:90%">N. do cartão</th>
                                                    <th>Remover</th>
                                                </tr>
                                            </thead>
                                            <tbody class="tabela-Cartao">
                                                @foreach (var cartao in ViewBag.Cartoes)
                                                {
                                                    <tr id="@cartao.NumeroCartao">
                                                        <td>@cartao.Id</td>
                                                        <td>@cartao.NomeCliente</td>
                                                        <td>@cartao.NumeroCartao</td>
                                                        <td><button class="btn btn-sm btn-danger btnRemover" onclick="removeCartao(@cartao.NumeroCartao)">Remover</button></td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                        <div class="snackbar4" id="snackbar"></div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>


                <!-- Area Chart Example-->
                <!-- /.container-fluid -->
                <!-- Sticky Footer -->
                <footer class="sticky-footer">
                    <div class="container my-auto">
                        <div class="copyright text-center my-auto">
                            <span>Copyright © Benner 2018</span>
                        </div>
                    </div>
                </footer>
            </div>
            <!-- /.content-wrapper -->
        </div>
        <!-- /#wrapper -->
        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded" href="#page-top">
            <i class="fas fa-angle-up"></i>
        </a>
        <!-- Logout Modal-->
        <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Sair?</h5>
                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">Selecione Logout se deseja Finalizar a sessão</div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
                        <a class="btn btn-primary" href="@Url.RouteUrl("Sair")">Logout</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Content/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Page level plugin JavaScript-->
    <script src="~/Content/vendor/chart.js/Chart.min.js"></script>
    <script src="~/Content/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/Content/vendor/datatables/dataTables.bootstrap4.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Content/js/sb-admin.min.js"></script>


    <!-- Demo scripts for this page-->
    <script src="~/Content/js/demo/datatables-demo.js"></script>
    <script src="~/Content/js/demo/chart-area-demo.js"></script>


    <script src="~/Content/js/gerenciaMesas.js"></script>
    <script src="~/Content/js/gerenciaUsuarios.js"></script>
    <script src="~/Content/js/gerenciaComandas.js"></script>
    <script src="~/Content/js/gerenciaCartoes.js"></script>


</body>

</html>
